{
  "schemaVersion": 1,
  "id": "auto-logout",
  "version": "${version}",
  "name": "Auto Logout",
  "description": "Automatically disconnects when health reaches a threshold.",
  "authors": [
    "MyOwnBrain"
  ],
  "contact": {},
  "license": "All-Rights-Reserved",
  "icon": "assets/auto-logout/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "de.myownbrain.autoLogout.client.AutoLogoutClient"
    ],
    "main": [
      "de.myownbrain.autoLogout.AutoLogout"
    ],
    "modmenu": [
      "de.myownbrain.autoLogout.client.integration.ModMenuIntegrationImpl"
    ]
  },
  "mixins": [
    "auto-logout.mixins.json",
    {
      "config": "auto-logout.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": ">=${minecraft_version}"
  },
  "suggests": {
    "modmenu": ">=${modmenu_version}",
    "cloth-config": ">={clothconfig_version}+fabric"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/auto-logout",
        "modmenu.github_releases": "https://github.com/MyOwnBrain/Auto-Logout/releases",
        "modmenu.website": "https://www.myownbrain.de/projects/auto-logout"
      },
      "update_checker": true
    }
  }
}
